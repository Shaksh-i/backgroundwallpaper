import React, { useState } from "react";
import { Outlet, Link, useNavigate, useLocation } from "react-router-dom";
import {
  AppBar,
  Toolbar,
  Typography,
  IconButton,
  Drawer,
  List,
  ListItem,
  ListItemText,
  Box,
  Button,
  Avatar,
  Card,
  CardContent,
} from "@mui/material";
import LogoutIcon from "@mui/icons-material/Logout";
import MenuIcon from "@mui/icons-material/Menu";
import LoginIcon from "@mui/icons-material/Login";
import PersonAddAltIcon from "@mui/icons-material/PersonAddAlt";
import AppNotificationIcon from "./AppNotificationIcon";
import ProfileMenu from "./ProfileMenu";
import axios from "../services/api";
import { motion } from "framer-motion";

export default function Layout({ children, user, setUser, logout }) {
  const [open, setOpen] = useState(false);
  const isLoggedIn = !!user;
  const navigate = useNavigate();
  const location = useLocation();
  const isHomePage = location.pathname === "/";

  const handleUpload = async (file) => {
    if (!user || !file) return;
    const formData = new FormData();
    formData.append("file", file);
    try {
      const res = await axios.post("/users/profile-photo", formData, {
        headers: { "Content-Type": "multipart/form-data" },
      });
      if (res.data?.profilePhoto) {
        const updatedUser = { ...user, profilePhoto: res.data.profilePhoto };
        setUser(updatedUser);
        const tokenData = localStorage.getItem("tokenData");
        if (tokenData) {
          try {
            const parsed = JSON.parse(tokenData);
            parsed.user = updatedUser;
            localStorage.setItem("tokenData", JSON.stringify(parsed));
          } catch {}
        }
      }
    } catch {
      alert("Failed to upload profile photo.");
    }
  };

  const handleRemovePhoto = async () => {
    if (!user) return;
    try {
      const res = await axios.delete("/users/profile-photo");
      if (res.data?.profilePhoto === null) {
        const updatedUser = { ...user, profilePhoto: null };
        setUser(updatedUser);
        const tokenData = localStorage.getItem("tokenData");
        if (tokenData) {
          try {
            const parsed = JSON.parse(tokenData);
            parsed.user = updatedUser;
            localStorage.setItem("tokenData", JSON.stringify(parsed));
          } catch {}
        }
      }
    } catch {
      alert("Failed to remove profile photo.");
    }
  };

  const menuItems = [
    { text: "Home", path: "/" },
    { text: "Cycle Log", path: "/cycles" },
    { text: "Symptoms", path: "/symptoms" },
    { text: "Reminders", path: "/reminders" },
    { text: "Health Insights", path: "/insights" },
  ];

  return (
    <Box
      sx={{
        height: isHomePage ? "100vh" : "auto",
        width: "100%",
        overflow: isHomePage ? "hidden" : "auto",
        backgroundImage: "url('/background.png')",
        backgroundSize: "cover",
        backgroundRepeat: "no-repeat",
        backgroundPosition: "center center",
        backgroundAttachment: "fixed",
        display: "flex",
        flexDirection: "column",
      }}
    >
      <AppBar
        position="sticky"
        sx={{
          width: "100%",
          background: "linear-gradient(to right, #6a1b9a, #8e24aa)",
          boxShadow: "0 4px 12px rgba(0,0,0,0.1)",
          borderBottom: "2px solid #ede7f6",
          height: 80, // âœ… reduced height
          justifyContent: "center",
        }}
      >
        <Toolbar
          sx={{ display: "flex", justifyContent: "space-between", px: 2 }}
        >
          {/* Left Section */}
          <Box sx={{ display: "flex", alignItems: "center", gap: 2 }}>
            <IconButton
              edge="start"
              color="inherit"
              onClick={() => isLoggedIn && setOpen(true)}
              disabled={!isLoggedIn}
              sx={{ fontSize: 26 }}
            >
              <MenuIcon fontSize="inherit" />
            </IconButton>

            <Box
              component="img"
              src="/logo.png"
              alt="HerSync Logo"
              sx={{ height: 55, width: 55 }}
            />

            <Typography
              variant="h4"
              sx={{
                fontWeight: "bold",
                fontFamily: "'Poppins', sans-serif",
                color: "#fff",
                letterSpacing: "0.5px",
              }}
            >
              HerSync
            </Typography>
          </Box>

          {/* Right Section */}
          <Box sx={{ display: "flex", alignItems: "center", gap: 2 }}>
            {isLoggedIn && <AppNotificationIcon user={user} />}

            {!isLoggedIn ? (
              <>
                {/* âœ… Gradient Login Button */}
                <Button
                  variant="contained"
                  component={Link}
                  to="/login"
                  startIcon={<LoginIcon />}
                  sx={{
                    background: "linear-gradient(45deg, #7b1fa2, #9c27b0)",
                    "&:hover": {
                      background: "linear-gradient(45deg, #8e24aa, #ba68c8)",
                    },
                    color: "#fff",
                    borderRadius: "10px",
                    fontWeight: "bold",
                    textTransform: "none",
                    px: 3,
                    py: 1,
                    fontFamily: "'Poppins', sans-serif",
                  }}
                >
                  Login
                </Button>

                {/* âœ… Gradient Signup Button */}
                <Button
                  variant="contained"
                  component={Link}
                  to="/signup"
                  startIcon={<PersonAddAltIcon />}
                  sx={{
                    background: "linear-gradient(45deg, #ab47bc, #8e24aa)",
                    "&:hover": {
                      background: "linear-gradient(45deg, #9c27b0, #ce93d8)",
                    },
                    color: "#fff",
                    borderRadius: "10px",
                    fontWeight: "bold",
                    textTransform: "none",
                    px: 3,
                    py: 1,
                    fontFamily: "'Poppins', sans-serif",
                  }}
                >
                  Sign Up
                </Button>
              </>
            ) : (
              <>
                <ProfileMenu
                  user={user}
                  onUpload={handleUpload}
                  onRemove={handleRemovePhoto}
                >
                  <Avatar
                    src={user?.profilePhoto || ""}
                    sx={{
                      width: 52,
                      height: 52,
                      bgcolor: user?.profilePhoto ? "transparent" : "#7b1fa2",
                      fontWeight: 600,
                      fontSize: 22,
                      color: "#fff",
                      cursor: "pointer",
                      border: "2px solid #fff",
                      boxShadow: "0 0 6px rgba(0,0,0,0.2)",
                    }}
                  >
                    {!user?.profilePhoto &&
                      (user?.username || user?.email || "U")
                        .charAt(0)
                        .toUpperCase()}
                  </Avatar>
                </ProfileMenu>

                <IconButton
                  color="inherit"
                  onClick={logout}
                  title="Logout"
                  sx={{
                    fontSize: 26,
                    "&:hover": {
                      backgroundColor: "#fff",
                      color: "#6a1b9a",
                    },
                  }}
                >
                  <LogoutIcon fontSize="inherit" />
                </IconButton>
              </>
            )}
          </Box>
        </Toolbar>
      </AppBar>

      {/* Drawer */}
      {isLoggedIn && (
        <Drawer
          open={open}
          onClose={() => setOpen(false)}
          PaperProps={{
            sx: {
              width: { xs: 200, sm: 240, md: 260 },
              backgroundColor: "#fff",
            },
          }}
        >
          <Box sx={{ height: "100%" }}>
            <List>
              {menuItems.map(({ text, path }) => {
                const isActive = location.pathname === path;
                return (
                  <ListItem
                    button
                    component={Link}
                    to={path}
                    key={text}
                    onClick={() => setOpen(false)}
                    sx={{
                      backgroundColor: isActive ? "#e1bee7" : "transparent",
                      borderLeft: isActive ? "6px solid #6a1b9a" : "none",
                      "&:hover": {
                        backgroundColor: "#f3e5f5",
                      },
                    }}
                  >
                    <ListItemText
                      primary={text}
                      sx={{
                        color: "#6a1b9a",
                        fontWeight: isActive ? "bold" : "normal",
                        fontSize: "1.2rem",
                        fontFamily: "'Poppins', sans-serif",
                      }}
                    />
                  </ListItem>
                );
              })}
            </List>
          </Box>
        </Drawer>
      )}

      {/* âœ… Main content area */}
      <Box sx={{ flex: 1, p: { xs: 1, sm: 2, md: 3 } }}>
        {isHomePage ? (
          <motion.div
            initial={{ opacity: 0, y: 40, scale: 0.9 }}
            animate={{ opacity: 1, y: 0, scale: 1 }}
            transition={{
              type: "spring",
              stiffness: 120,
              damping: 10,
              duration: 0.8,
            }}
            style={{
              display: "flex",
              alignItems: "center",
              justifyContent: "center",
              height: "80vh",
              flexDirection: "column",
            }}
          >
            <Card
              sx={{
                padding: 5,
                borderRadius: "20px",
                boxShadow: "0 12px 30px rgba(0,0,0,0.15)",
                backdropFilter: "blur(10px)",
                backgroundColor: "rgba(255,255,255,0.8)",
                textAlign: "center",
                width: { xs: "90%", sm: "70%", md: "40%" },
                transition: "all 0.4s ease",
                "&:hover": {
                  transform: "scale(1.05)",
                  boxShadow: "0 16px 40px rgba(138,43,226,0.3)",
                },
              }}
            >
              <CardContent>
                <motion.h1
                  style={{
                    fontSize: "2.5rem",
                    color: "#6a1b9a",
                    fontWeight: "bold",
                    fontFamily: "'Poppins', sans-serif",
                    marginBottom: "10px",
                  }}
                  initial={{ opacity: 0, y: -20 }}
                  animate={{ opacity: 1, y: 0 }}
                  transition={{ delay: 0.3 }}
                >
                  Welcome to HerSync ðŸ’œ
                </motion.h1>
                <motion.p
                  style={{
                    fontSize: "1.1rem",
                    color: "#4a148c",
                    fontFamily: "'Poppins', sans-serif",
                    marginBottom: "20px",
                  }}
                  initial={{ opacity: 0, y: 20 }}
                  animate={{ opacity: 1, y: 0 }}
                  transition={{ delay: 0.5 }}
                >
                  Stay connected with your cycle, wellness, and self â€” all in one place.
                </motion.p>

                <motion.div
                  initial={{ opacity: 0 }}
                  animate={{ opacity: 1 }}
                  transition={{ delay: 0.7 }}
                >
                  <Button
                    variant="contained"
                    size="large"
                    onClick={() => navigate("/dashboard")}
                    sx={{
                      background: "linear-gradient(45deg, #7b1fa2, #9c27b0)",
                      "&:hover": { background: "linear-gradient(45deg, #8e24aa, #ba68c8)" },
                      color: "#fff",
                      borderRadius: "10px",
                      fontWeight: "bold",
                      fontFamily: "'Poppins', sans-serif",
                      paddingX: 4,
                    }}
                  >
                    Go to Dashboard
                  </Button>
                </motion.div>
              </CardContent>
            </Card>
          </motion.div>
        ) : (
          children
        )}
      </Box>
    </Box>
  );
}
